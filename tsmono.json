{
  "package": {
    "name": "nix-comment-updater"
  },

  rsync_instead_of_symlink: true,

  "devDependencies": [
    "utils-testrunner"
  ],

  "dependencies": [
    "rimraf",
    "utils-spawn",
    "argparse",
    "utils-lazy",
    "utils-scalar-limiter"
  ],

  "tsconfig": {
    "compilerOptions": {
      "outFile": "./dist/nix-comment-updater.js",
      "jsx": "react",
      "strict": true,
      "jsxFactory": "createElement",

      "module": "commonjs",
      "target": "esnext",

      "sourceMap": true,
      "importHelpers": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "outDir":"./dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "/*": ["src/*"]
      }
    },
    "exclude": [
    ]
  }
}

